{
  "name": "backlink-checker-php",
  "version": "2.0.0",
  "description": "Validates a predefined list of backlinks on remote websites that they exist and are correct (for SEO). Simple and Javascript-enabled web engines are used for scraping.",
  "license": "GPL-3.0",
  "author": "Ramil Valitov <ramil@walitoff.com>",
  "scripts": {
    "coverage": "php8.0 ./vendor/bin/phpunit --coverage-clover ./coverage/clover.xml --coverage-html ./coverage/html --coverage-xml ./coverage/xml --coverage-text",
    "json": "jsonlint -q ./*.json",
    "lint": "eslint .",
    "markdown": "remark . --frail",
    "markdown:fix": "remark . --frail --output",
    "package": "npx npm-package-json-lint .",
    "phpcs": "php8.0 ./vendor/bin/phpcs --standard=PSR2 src/",
    "phpmd": "php8.0 ./vendor/bin/phpmd src/ text phpmd.xml",
    "phpunit": "php8.0 ./vendor/bin/phpunit",
    "prettier": "prettier --config .prettierrc.cjs --check .",
    "prettier:fix": "prettier --config .prettierrc.cjs --write .",
    "phpcs-fixer": "npm run \"phpcs-fixer:src\" && npm run \"phpcs-fixer:tests\"",
    "phpcs-fixer:src": "php8.0 ./vendor/bin/php-cs-fixer --verbose check src",
    "phpcs-fixer:tests": "php8.0 ./vendor/bin/php-cs-fixer --verbose check tests",
    "phpcs-fixer:fix": "php8.0 ./vendor/bin/php-cs-fixer fix src && php8.0 ./vendor/bin/php-cs-fixer fix tests",
    "sort": "sort-package-json ./package.json ./composer.json",
    "start-server": "http-server -a 127.0.0.1 -p 8080 tests/data",
    "test": "npm run markdown && npm run json && npm run package && npm run lint && npm run coverage"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended"
    ]
  },
  "dependencies": {
    "@zoon/puphpeteer": "https://github.com/zoonru/puphpeteer/tarball/zoon"
  },
  "devDependencies": {
    "@prantlf/jsonlint": "^16.0.0",
    "@prettier/plugin-xml": "^3.4.1",
    "eslint": "^9.16.0",
    "eslint-plugin-yml": "^1.16.0",
    "http-server": "^14.1.1",
    "npm-package-json-lint": "^8.0.0",
    "npm-package-json-lint-config-default": "^7.0.1",
    "prettier": "^3.4.2",
    "remark-cli": "^12.0.1",
    "remark-lint-list-item-indent": "^4.0.0",
    "remark-preset-lint-consistent": "^6.0.0",
    "remark-preset-lint-recommended": "^7.0.0",
    "sort-package-json": "^2.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
